[sqlfluff]
dialect = duckdb
templater = dbt
exclude_rules = L034,L016

[sqlfluff:templater:dbt]
profiles_dir = .
profile = diffle_shop
target = dev

[sqlfluff:indentation]
indented_joins = false
indented_ctes = false
template_blocks_indent = false

[sqlfluff:rules]
# Enforce trailing commas
comma_style = trailing

# Line length limit
max_line_length = 120

# Prefer explicit over implicit
prefer_count_1 = true
prefer_count_0 = false

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.identifiers]
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.functions]
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.literals]
capitalisation_policy = lower

[sqlfluff:rules:L010]
# Keywords should be consistently capitalised
capitalisation_policy = lower

[sqlfluff:rules:L030]
# Function names should be consistently capitalised
capitalisation_policy = lower

[sqlfluff:rules:L040]
# Null & Boolean literals should be consistently capitalised
capitalisation_policy = lower